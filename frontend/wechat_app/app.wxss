/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.divider {
  height: 20rpx;
  background-color: #f1f1f1;
}

.arrow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after {
  content: "";
  width: 20rpx;
  height: 20rpx;
  border-right: 1px solid #ccc;
  border-top: 1px solid #ccc;
  display: block;
  transform: rotate(45deg);
}

.align-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.cell {
  font-size: 16px;
  background-color: #fff;
}

.cell-item {
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
}