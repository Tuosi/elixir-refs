page {
  background-color: #ddd;
}

.card {
  background-color: #fff;
  margin: 60rpx 20rpx;
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 20px;
  color: #333;
  margin-bottom: 20rpx;
}

.card-date {
  font-size: 14px;
  color: #aaa;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}

.card-img {
  width: 100%;
  height: 316rpx;
  margin-bottom: 20rpx;
}

.card-desc {
  font-size: 16px;
  color: #333;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}

.card-read {
  font-size: 14px;
  color: #ccc;
}

