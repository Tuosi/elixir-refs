
.slider {
  overflow: hidden;
}

.slider image {
  width: 100%;
  height: 390rpx;
  display: block;
}

.index-nav {
  display: flex;
  flex-wrap: wrap;
}

.index-nav .nav-item {
  width: 33.333%;
  height: 200rpx;
  font-size: 16px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  
  border-bottom: 1rpx solid red;
  position: relative;
}

.index-nav .nav-item::after {
  content: "";
  width: 1rpx; 
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  background-color: red;
}

.index-nav .nav-item:nth-child(3n)::after {
  width: 0;
}

.index-nav image {
  width: 80rpx;
  height: 80rpx;
}

.index-enter {
  display: flex;
  padding: 20rpx 30rpx;
}

.index-enter .enter-item {
  width: 50%;
  display: flex;
  justify-content: center;
}

.index-enter image {
  width: 320rpx;
  height: 178rpx;
}


